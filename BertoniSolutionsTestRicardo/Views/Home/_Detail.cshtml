@using BertoniSolutionsTestRicardo.Models

@model AlbumsVM

<div class="row" id="DetailModal" tabindex="-1">
    <div class="row" role="document">
        <div class="content col-md-10">
            <div class="header">
                <h3 class="modal-title">Comentarios</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="body">
                @foreach (var item in Model.Detail.Items)
                {
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title"><strong>@item.Name - @item.Email</strong></h5>
                            <p class="card-text">@item.Body</p>
                        </div>
                    </div>
                }
 
            </div>
        </div>
    </div>
</div>